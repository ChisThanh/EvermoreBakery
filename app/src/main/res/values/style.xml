<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!--Layout Frame-->
    <style name="FrameLayout">
        <item name="android:background">@drawable/frame_layout</item>
        <item name="android:backgroundTint">@color/desert_sand</item>
        <item name="android:padding">20dp</item>
    </style>

    <!--Title TextView-->
    <style name="TextViewTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Medium TextView-->
    <style name="TextViewMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Basic TextView-->
    <style name="TextViewBasic">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Annotation TextView-->
    <style name="TextViewAnnotation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!--Open TextView-->
    <style name="TextViewOpen">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Primary EditText-->
    <style name="EditTextPrimary">
        <!--Change The Color Of The Background, Check the custom_edit_text.xml in Drawable-->
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Primary Button-->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/cedar_wood</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Secondary Button-->
    <style name="ButtonSecondary">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/faded_orange</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Open Button-->
    <style name="ButtonOpen">
        <item name="android:background">@drawable/custom_progress_bar</item>
        <item name="android:backgroundTint">@color/sandstorm</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Custom Progress Bar-->
    <style name="ProgressBarCustom" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:progressTint">@color/sandstorm</item>
        <item name="android:progressBackgroundTint">@color/floral_white</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:indeterminateOnly">false</item>
    </style>
</resources>