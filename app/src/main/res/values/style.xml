<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!--Layout Frame-->
    <style name="FrameLayout">
        <item name="android:background">@drawable/custom_frame_layout</item>
        <item name="android:backgroundTint">@color/desert_sand</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!--Main Layout Frame-->
    <style name="FrameLayoutMain">
        <item name="android:background">@color/desert_sand</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">65dp</item>
    </style>

    <!--Header Relative Layout-->
    <style name="RelativeLayoutHeader">
        <item name="android:background">@color/rust_brown</item>
    </style>

    <!--Home Adapter-->
    <style name="AdapterHome">
        <item name="android:background">@drawable/custom_gradiant</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--Search View-->
    <style name="SearchView">
        <!--Change The Color Of The Background, Check the custom_search_view.xml in Drawable-->
        <item name="android:background">@drawable/custom_search_view</item>
        <item name="android:searchIcon">@drawable/icon_search</item>
        <item name="android:closeIcon">@drawable/icon_close</item>
    </style>

    <!--Header Title TextView-->
    <style name="TextViewHeaderTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Header Subtitle TextView-->
    <style name="TextViewHeaderSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--Title TextView-->
    <style name="TextViewTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Medium TextView-->
    <style name="TextViewMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cedar_wood</item>
    </style>

    <!--Normal TextView-->
    <style name="TextViewNormal">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Basic TextView-->
    <style name="TextViewBasic">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Recommendation TextView-->
    <style name="TextViewRecommendation">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/potters_clay</item>
    </style>

    <!--Annotation TextView-->
    <style name="TextViewAnnotation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!--Hyperlink TextView-->
    <style name="TextViewHyperlink">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hyperlink_blue</item>
    </style>

    <!--Open TextView-->
    <style name="TextViewOpen">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/floral_white</item>
    </style>

    <!--EditText-->
    <style name="EditText">
        <!--Change The Color Of The Background, Check the custom_edit_text.xml in Drawable-->
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Spinner-->
    <style name="Spinner">
        <!--Change The Color Of The Background, Check the custom_edit_text.xml in Drawable-->
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Spinner TextView-->
    <style name="TextViewSpinner">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Primary Button-->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/cedar_wood</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Secondary Button-->
    <style name="ButtonSecondary">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/faded_orange</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Open Button-->
    <style name="ButtonOpen">
        <item name="android:background">@drawable/custom_progress_bar</item>
        <item name="android:backgroundTint">@color/sandstorm</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Add Button-->
    <style name="ButtonAdd">
        <item name="android:background">@drawable/custom_button_add</item>
        <item name="android:backgroundTint">@color/cedar_wood</item>
        <item name="android:textColor">@color/floral_white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--CheckBox Bar-->
    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Progress Bar-->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:progressTint">@color/sandstorm</item>
        <item name="android:progressBackgroundTint">@color/floral_white</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <!--Bottom Navigation View-->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/rust_brown</item>
        <item name="itemTextColor">@color/rust_brown</item>
        <item name="android:background">@color/floral_white</item>
    </style>

    <!--Bottom Navigation View Text Appearance-->
    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/rust_brown</item>
    </style>

    <!--PopupMenu-->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/custom_popup_menu_item</item>
        <item name="android:textColor">@color/rust_brown</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>