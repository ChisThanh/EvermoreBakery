<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/desert_sand"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <TextView
            style="@style/TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login"
        />

        <EditText
            android:id="@+id/uText_fLogin_Email"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/icon_email"
            android:hint="@string/email"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:ignore="LabelFor,VisualLintTextFieldSize"
        />

        <TextView
            android:id="@+id/vText_fLogin_EmailAnnotation"
            style="@style/TextViewAnnotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="@string/email_annotation"
            tools:ignore="RtlHardcoded,TextContrastCheck"
        />

        <EditText
            android:id="@+id/uText_fLogin_Password"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/icon_password"
            android:drawableEnd="@drawable/icon_show"
            android:hint="@string/password"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPassword"
            tools:ignore="LabelFor,VisualLintTextFieldSize"
        />

        <TextView
            android:id="@+id/vText_fLogin_PasswordAnnotation"
            style="@style/TextViewAnnotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="@string/password_annotation"
            tools:ignore="RtlHardcoded,TextContrastCheck"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
        >

            <CheckBox
                android:id="@+id/uCheck_fLogin_Remember"
                style="@style/CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/remember_account"
                tools:ignore="VisualLintButtonSize,TouchTargetSizeCheck"
            />

            <TextView
                android:id="@+id/vText_fLogin_Recover"
                style="@style/TextViewHyperlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forgot_password"
                android:textAlignment="textEnd"
                tools:ignore="TextContrastCheck"
            />

        </LinearLayout>

        <Button
            android:id="@+id/uButton_fLogin_Login"
            style="@style/ButtonSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/login"
            tools:ignore="TextContrastCheck,VisualLintButtonSize"
        />

        <TextView
            style="@style/TextViewBasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/or"
        />

        <TextView
            android:id="@+id/vText_fLogin_Register"
            style="@style/TextViewHyperlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/create_account"
            tools:ignore="RelativeOverlap,TextContrastCheck"
        />

    </LinearLayout>

</ScrollView>