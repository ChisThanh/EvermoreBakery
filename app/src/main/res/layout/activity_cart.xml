<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rust_brown"
    tools:context=".Activity.ActivityCart">

    <androidx.cardview.widget.CardView
        android:id="@+id/vCard_aDetails_Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        >

        <ImageView
            android:id="@+id/vImage_aDetails_Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/icon_return"
            android:background="@color/floral_white"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lFrame_aDetails_Layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/vCard_aDetails_Return"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/title_order"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/vImage_aMain_Action"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/icon_action"
        />
    <FrameLayout
        android:id="@+id/lFrame_aDetails_Layout"
        style="@style/CheckoutLayout"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>