<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="270dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
>

    <RelativeLayout
        style="@style/AdapterHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <androidx.cardview.widget.CardView
            android:id="@+id/vCart_aHome_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
        >

            <ImageView
                android:id="@+id/vImage_aHome_Image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars"
            />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/vText_aHome_Name"
            style="@style/TextViewNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vCart_aHome_Image"
            android:layout_marginTop="5dp"
            android:text="@string/name"
        />

        <TextView
            android:id="@+id/vText_aHome_Price"
            style="@style/TextViewBasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vText_aHome_Name"
            android:layout_marginTop="10dp"
            android:text="@string/price"
            tools:ignore="RelativeOverlap"
        />

        <Button
            android:id="@+id/uButton_aHome_Add"
            style="@style/ButtonAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:text="@string/add_cart"
            tools:ignore="RelativeOverlap,TextSizeCheck,TouchTargetSizeCheck"
        />

    </RelativeLayout>

</androidx.cardview.widget.CardView>